-- zpx_loading.lua

-- logo
local logo = [[
ZZZZZZ  III  PPPPPPP
   ZZ   III  PPPPPPP
 ZZ     III  PPP
ZZZZZZ  III  PPP
]]

-- slow print function
function slowPrint(text, delay)
    for char in text:gmatch(".") do
        write(char)
        os.sleep(delay)
    end
end

-- print the logo
print(logo)

-- loading bar
slowPrint("Loading: [", 0.05)
for i = 1, term.getSize() - 14 do  -- adjust for "Loading: [" and "]"
    write("=")
    os.sleep(0.05)
end
print("]")  -- close the loading bar
